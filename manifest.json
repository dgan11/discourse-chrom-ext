{
  "manifest_version": 3,
  "name": "Discourse Mod Helper",
  "version": "1.0.0",
  "description": "Chrome extension to help Discourse Mods",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png"
  }
} 